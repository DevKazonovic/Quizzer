<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuizApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/dark</item>

        <!--Theme Color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorPrimaryDark">@color/blue_200</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_babyblue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorControlNormal">@color/blue_500</item>
        <item name="colorToolbarBackground">@color/dark_surface</item>
        <item name="colorToolbarTitle">@color/white</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorRedThings">@color/red_dark</item>
        <item name="colorGreenThings">@color/green_dark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_surface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="toolbarStyle">@style/Widget.Quizzer.Toolbar</item>
        <item name="materialButtonStyle">@style/Widget.Quizzer.Button</item>
        <item name="textInputStyle">@style/Widget.Quizzer.TextInputLayout</item>
        <item name="preferenceFragmentCompatStyle">@style/ThemeOverlay.Quizzer.PreferenceFragment</item>

    </style>
</resources>
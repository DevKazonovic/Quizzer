<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--TextAppearance-->
    <style name="TextAppearance.Label" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Quizze.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="TextAppearance.Quizzer.MainToolbar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/trade_gothic_ltstd_bold</item>
        <item name="fontFamily">@font/trade_gothic_ltstd_bold</item>

    </style>
    <!--TextAppearance-->

    <!--Toolbar-->
    <style name="Widget.Quizzer.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Quizzer.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.Quizze.Title</item>
    </style>

    <style name="Widget.Quizzer.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Quizzer.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.Quizze.Title</item>
    </style>

    <style name="ThemeOverlay.Quizzer.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="colorOnPrimary">?attr/colorToolbarTitle</item>
    </style>

    <!--Toolbar-->

    <!--Buttons-->
    <style name="Widget.Quizzer.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.Quizzer.Custom</item>
    </style>

    <style name="ShapeAppearance.Quizzer.Custom" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">18dp</item>
    </style>
    <!--Buttons-->

    <!--Inputs-->
    <style name="Widget.Quizzer.AutoCompleteTextView" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Quizzer.AutoCompleteTextView</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">32dp</item>
    </style>

    <style name="Widget.Quizzer.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Quizzer.TextInputLayout</item>
    </style>

    <style name="ThemeOverlay.Quizzer.AutoCompleteTextView" parent="">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="autoCompleteTextViewStyle">
            @style/Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox
        </item>
    </style>

    <style name="ThemeOverlay.Quizzer.TextInputLayout" parent="">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="editTextStyle">
            @style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
    </style>

    <style name="Widget.Quizzer.TextInputLayout.QuizSetting">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">32dp</item>
    </style>
    <!--Inputs-->


    <style name="ThemeOverlay.Quizzer.PreferenceFragment" parent="@style/PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_app_setting</item>
    </style>

    <style name="Margin.ScoreLayout" parent="">
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>